<div class = "form-wrapper">
  <h2>Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :name %><br />
        <%= f.text_field :name,
          required: true, autofocus: true, autocomplete: "name", class: "form-we" %>
      </div>

      <div >
        <%= f.label :username %><br />
        <%= f.text_field :username, required: true, autocomplete: "username", class: "form-we" %>
      </div>

      <div >
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-we" %>
      </div>


      <div >
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-we" %>
      </div>

      <div >
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-we" %>
      </div>

      <div >
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
</div>
    


