<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="alert"><%= alert %></p>
    <%= yield %>

    <% if user_signed_in? %>
      <%= link_to current_user.name, edit_user_registration_path %><br>
      <%= link_to "Log_out", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "Sign_in", new_user_session_path %><br>
      <%= link_to "Sign_up", new_user_registration_path %>  
    <%end%>
  </body>
</html>
