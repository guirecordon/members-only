<p id="notice"><%= notice %></p>

<div class="love-wrapper">
  <div class="main d-flex flex-column align-items-center">
    <h1>Posts</h1>

    <table>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.post %></td>
            <% if user_signed_in? %>  
              <td><%= post.user.name %></td>
            <% end %> 
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <% if user_signed_in? %>
    <%= link_to 'New Post', new_post_path %>
    <% end %>
  </div>
</div>

